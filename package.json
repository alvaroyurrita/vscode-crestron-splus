{
  "name": "simpl-plus",
  "displayName": "SIMPL+",
  "description": "Syntax highlighting, formatting, build tasks.",
  "version": "1.0.0",
  "publisher": "sentry07",
  "icon": "icons/crestron.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/sentry07/vscode-crestron-splus.git"
  },
  "license": "GPL-3.0",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simpl-plus.localHelp",
        "title": "SIMPL+: Open S+ Help Reference"
      },
      {
        "command": "simpl-plus.webHelp",
        "title": "SIMPL+: Open S+ Online Reference"
      },
      {
        "command": "simpl-plus.build",
        "title": "SIMPL+: Build SIMPL+ Project"
      }
    ],
    "configuration": [
      {
        "title": "SIMPL+",
        "properties": {
          "simpl-plus.simplDirectory": {
            "type": "string",
            "default": "C:\\Program Files (x86)\\Crestron\\Simpl",
            "description": "Location of the Crestron SIMPL Directory."
          },
          "simpl-plus.enable2series": {
            "type": "boolean",
            "default": false,
            "description": "Default Build Target to Series 2 for new or unknown SIMPL+ files"
          },
          "simpl-plus.enable3series": {
            "type": "boolean",
            "default": true,
            "description": "Default Build Target to Series 3 for new or unknown SIMPL+ files"
          },
          "simpl-plus.enable4series": {
            "type": "boolean",
            "default": true,
            "description": "Default Build Target to Series 4 for new or unknown SIMPL+ files"
          }
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "simpl-plus.localHelp",
          "group": "navigation@1",
          "when": "resourceLangId == simpl-plus-source"
        },
        {
          "command": "simpl-plus.webHelp",
          "group": "navigation@2",
          "when": "resourceLangId == simpl-plus-source"
        }
      ]
    },
    "keybindings": [
      {
        "command": "simpl-plus.localHelp",
        "key": "ctrl+shift+f1",
        "when": "resourceLangId == simpl-plus-source"
      },
      {
        "command": "simpl-plus.webHelp",
        "key": "ctrl+shift+f2",
        "when": "resourceLangId == simpl-plus-source"
      },
      {
        "command": "simpl-plus.build",
        "key": "F12",
        "when": "resourceLangId == simpl-plus-source"
      }
    ],
    "languages": [
      {
        "aliases": [
          "SIMPL+"
        ],
        "id": "simpl-plus-source",
        "extensions": [
          ".usp",
          ".usl",
          ".csp",
          ".csl"
        ],
        "icon": {
          "dark": "./icons/simpl+Icon.png",
          "light": "./icons/simpl+Icon.png"
        },
        "configuration": "./language-configuration.json"
      },
      {
        "aliases": [
          "SIMPL# API"
        ],
        "id": "simpl-sharp-api-source",
        "extensions": [
          ".api"
        ],
        "icon": {
          "dark": "./icons/simplSharpIcon.png",
          "light": "./icons/simplSharpIcon.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "icons": {
      "target-two": {
        "description": "Simpl Plus Target Series 2",
        "default": {
          "fontPath": "./icons/simpl-plus-targets.woff",
          "fontCharacter": "\\20"
        }
      },
      "target-three": {
        "description": "Simpl Plus Target Series 3",
        "default": {
          "fontPath": "./icons/simpl-plus-targets.woff",
          "fontCharacter": "\\21"
        }
      },
      "target-four": {
        "description": "Simpl Plus Target Series 4",
        "default": {
          "fontPath": "./icons/simpl-plus-targets.woff",
          "fontCharacter": "\\22"
        }
      }
    },
    "grammars": [
      {
        "language": "simpl-plus-source",
        "scopeName": "source.simpl-plus",
        "path": "./syntaxes/simpl-plus.tmLanguage.json"
      },
      {
        "language": "simpl-sharp-api-source",
        "scopeName": "source.simpl-sharp-api",
        "path": "./syntaxes/simpl-sharp-api.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "simpl-plus-source",
        "path": "./snippets/snippets.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "simpl-plus-source",
        "properties": {
          "label": {
            "type": "string"
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "SIMPL+",
        "owner": "simpl-plus",
        "fileLocation": [
          "absolute"
        ],
        "pattern": {
          "regexp": "\\[([^\\]]*)\\]\\s*(?:Error)\\s*\\d*\\s*\\(Line (\\d*)\\)\\s*-\\s*(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        }
      }
    ],
    "configurationDefaults": {
      "[simpl-plus-source]": {
        "editor.wordBasedSuggestions": "currentDocument",
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": false
        },
        "editor.snippetSuggestions": "top"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "yaml2json-watch": "yaml2json syntaxes --save --pretty --recursive --watch",
    "puml-to-svg": "java -jar \"C:\\ProgramData\\chocolatey\\lib\\plantuml\\tools\\plantuml.jar\"  \".\\UML\\csharp-syntax-mindmap\\*.puml\" \".\\UML\\simpl-plus-syntax-mindmap\\*.puml\" -svg",
    "test-with-coverage": "vscode-test --coverage"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.1.0",
    "eslint": "^9.9.1",
    "sinon": "^19.0.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "yamljs": "^0.3.0"
  },
  "__metadata": {
    "id": "sentry07.simpl-plus",
    "publisherId": "sentry07",
    "publisherDisplayName": "Eric Walters"
  },
  "dependencies": {
    "axios": "^1.7.7"
  }
}
